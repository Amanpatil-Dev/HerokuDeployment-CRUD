<!-- form handeling -->
<form action="/api/users" method="post" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" >Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Someone user">
        </div>
        <div class="form-group">
            <label for="email" >Email</label>
            <input type="text" name="email" value="" placeholder="Someoneuser@gmail.com">
        </div>
        <div class="form-group">
            <label for="gender" >Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="male">
                <label for="radio-2" >Male</label>

            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="female">
                <label for="radio-3" >FeMale</label>

            </div>

        </div>
        <div class="form-group">
            <label for="gender" >Status</label>
            
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active">
                <label for="radio-4" >Active</label>

            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive">
                <label for="radio-5" >Inactive</label>

            </div>

        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>



</form>
<!-- form handeling end -->